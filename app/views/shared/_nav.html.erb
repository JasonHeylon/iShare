      <form class="navbar-form navbar-right" action="/articles" role="search">
        <div class="form-group">
          <input type="text" class="form-control" value="<%= params[:keyword] %>" name="keyword" placeholder="搜索..">
        </div>
      </form>
    
    </div>
  </div>
