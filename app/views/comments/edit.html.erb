<% provide(:title, "评论更新") %>
<div class="row">
	<div class="col-md-12">
		<div class="edit-comment normal-box">
			<div class="form">
				<%= form_for  [@article,@comment], method: :patch do |f| %>
					<div class="text-box">
						<%= f.text_area :body, class: "form-control", placeholder: "请输入内容" %>
					</div>
					<div class="button">
						<%= f.submit "更新回复", class: "btn btn-primary" %>
					</div>

				<% end %>
				<div class="clear"></div>

			</div>

			<div class="help">
				<ul class="help-list">
					<li>支持markdown语法。</li>
					<li>test</li>
				</ul>
			</div>
		</div>
	</div>
</div>

