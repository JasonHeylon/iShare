<%= provide(:title, "用户登录") %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="regiseter-box normal-box">
      <h2>登录</h2>
			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			  <div><%= f.label :email, "登录邮箱" %><br />
			  <%= f.email_field :email, autofocus: true, class: "form-control" %></div>

			  <div><%= f.label :password, "登录密码" %><br />
			    <%= f.password_field :password, autocomplete: "off", class: "form-control" %></div>

			  <% if devise_mapping.rememberable? -%>
			    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, "记住我的登录状态" %></div>
			  <% end -%>

			  <div><%= f.submit "登录", class: "btn btn-primary" %></div>
			<% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>

</div>


